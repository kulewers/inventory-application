extends layout 

block content 
    h1 #{title}: #{category.name}
    p= category.description 

    if category_tea.length

        p #[strong Delete the following tea before attempting to delete this category.]

        div(style='margin-left:20px;margin-top:20px;')

            h4 Tea 

            dl
            each tea in category_tea 
                dt 
                    a(href=tea.url) #{tea.name}
                dd #{tea.description}

    else 
        p Do you really want to delete this Category?

        form(method='POST' action='')
            div.form-group
                input#categoryid.form-control(type='hidden', name='categoryid', required='true', value=category._id)

            button.btn.btn-primary(type='submit') Delete 